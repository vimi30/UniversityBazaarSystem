<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/ppage"
    tools:context=".PeoplePage">

    <TextView
        android:id="@+id/exchangeInfo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:text="About: This is a discussion board. Anyone can exchange information about any topic by Posting here"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#DC143C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ListView
        android:id="@+id/rView"
        android:layout_width="match_parent"
        android:layout_height="550sp"
        android:layout_marginTop="70dp"></ListView>




    <Button
        android:id="@+id/post_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="300dp"/>

    <EditText
        android:id="@+id/discussion__query"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="650dp"
        android:ems="10"
        android:hint="Type Here and Press Post Button"
        android:gravity="center"
        android:inputType="textPersonName" />
</RelativeLayout>