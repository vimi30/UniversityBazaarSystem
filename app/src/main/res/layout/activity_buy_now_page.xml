<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyNowPage">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient's Address"
            ></TextView>
        <EditText
            android:id="@+id/enterAddress"
            android:layout_toRightOf="@+id/address"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Recipient's Address"
            ></EditText>
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_below="@+id/address"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            ></TextView>
        <EditText
            android:id="@+id/enterPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_below="@+id/enterAddress"
            android:layout_toRightOf="@+id/phoneNumber"
            android:hint="Enter Phone Number"
            ></EditText>

    <TextView
        android:id="@+id/cardNumber"
        android:layout_below="@+id/phoneNumber"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        ></TextView>
    <EditText
        android:id="@+id/enterCardNumber"
        android:layout_below="@+id/enterPhoneNumber"
        android:layout_toRightOf="@+id/cardNumber"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Card Number"
        ></EditText>

    <Button
        android:id="@+id/purchase"
        android:layout_below="@id/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Purchase"
        android:layout_centerInParent="true"
        ></Button>


</RelativeLayout>


</LinearLayout>