<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/simpleSearchView"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search Here" />
        <Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Profile"></Button>
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="375dp"
        android:layout_marginTop="65sp">

        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:id="@+id/slidingwindow"
            android:layout_height="210dp"
            app:placeholder="@drawable/default_image"
            app:error_image="@drawable/default_image"
            app:auto_cycle="true"
            app:period="1000"
            android:gravity="center_horizontal"
            app:corner_radius="5"
            app:delay="5"></com.denzcoskun.imageslider.ImageSlider>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#f8e9e6"
            app:cardCornerRadius="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="@color/design_default_color_secondary">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="Announcement"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#81f662"


                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Product On Sale"
                    android:textSize="20sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/announceProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20sp"
                    android:paddingBottom="10sp"
                    android:text="Product Name"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/announceProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/teal_200"
                    android:textSize="20sp" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:text="Announcements"
                    android:textSize="30sp"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="50sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:layout_marginTop="10sp"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">


            <androidx.cardview.widget.CardView
                android:id="@+id/communityTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="150sp"
                android:layout_width="170sp"
                >

                <TextView

                    android:layout_width="140sp"
                    android:layout_height="170sp"
                    android:text="Communication"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70sp"
                    android:paddingBottom="30sp"
                    ></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/clubTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="150sp"
                android:layout_width="170sp"
                >

                <TextView

                    android:layout_width="150sp"
                    android:layout_height="175sp"
                    android:text="Clubs"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70sp"
                    android:paddingBottom="30sp"
                    ></TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/peopleTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="150sp"
                android:layout_width="170sp"
                >

                <TextView

                    android:layout_width="150sp"
                    android:layout_height="175sp"
                    android:text="People"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70sp"
                    android:paddingBottom="30sp"
                    ></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/buy_sellTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="150sp"
                android:layout_width="170sp"
                >

                <TextView

                    android:layout_width="150sp"
                    android:layout_height="175sp"
                    android:text="Buy/Sell"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70sp"
                    android:paddingBottom="30sp"
                    ></TextView>

            </androidx.cardview.widget.CardView>






        </GridLayout>







    </LinearLayout>

</RelativeLayout>