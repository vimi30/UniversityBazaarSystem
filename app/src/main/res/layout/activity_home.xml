<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <SearchView
                android:id="@+id/simpleSearchView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="Search Here" />
            <Button
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Profile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f8e9e6"
                app:cardCornerRadius="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@color/design_default_color_secondary">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Announcement"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#81f662"


                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Product On Sale"
                        android:textSize="20sp"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/announceProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="Product Name"
                        android:textColor="@color/teal_200"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/announceProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="@color/teal_200"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/communityTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="0dp"
                android:layout_width="0dp"
                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:text="Communication"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70dp"
                    android:paddingBottom="30dp"
                    ></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/clubTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="0dp"
                android:layout_width="0dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:text="Clubs"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70dp"
                    android:paddingBottom="30dp"
                    ></TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/peopleTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="0dp"
                android:layout_width="0dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:text="People"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70dp"
                    android:paddingBottom="30dp"
                    ></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/buy_sellTab"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#c6ebff"
                android:layout_height="0dp"
                android:layout_width="0dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:text="Buy/Sell"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="70dp"
                    android:paddingBottom="30dp"
                    ></TextView>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>